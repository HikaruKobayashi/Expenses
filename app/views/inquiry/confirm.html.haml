-# ----------------------------
-# header
-# ----------------------------
= render 'layouts/header'

.container-fluid
  .row
    -# ----------------------------
    -# sidebar
    -# ----------------------------
    = render 'layouts/side_bar'

    %div.col-8{ style: 'margin-left: 100px;'}
      %h2 【お問い合わせ内容の確認】
      = form_for @inquiry, :url => inquiry_thanks_path do |f|
        .wrapper.col-12
          %table.contact-form
            %tr
              %th 名前
              %td
                = f.hidden_field :name
                = @inquiry.name
            %tr
              %th メールアドレス
              %td
                = f.hidden_field :email
                = @inquiry.email
            %tr
              %th お問い合わせ内容
              %td
                = f.hidden_field :message
                = simple_format(@inquiry.message)

        = f.submit '送信', class: 'btn btn-primary submit-btn'

-# ----------------------------
-# footer
-# ----------------------------
= render 'layouts/footer'
