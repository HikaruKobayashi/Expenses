-# ----------------------------
-# header
-# ----------------------------
= render 'layouts/header'

.container-fluid
  .row
    -# ----------------------------
    -# sidebar
    -# ----------------------------
    = render 'layouts/side_bar'

    %div.col-8{ style: 'margin-left: 100px;'}
      %h2 【貯金】
      %button.btn.btn-warning.enroll-in
        %i.fa.fa-plus-circle
        = link_to '登録', new_save_path, class: 'menu-link'
      - if @save.present?
        .col-10
          %h2 現在の貯金額は#{Save.sum(:money)}円です。
        %h2 月間レポート
        %canvas#myChart.col-12
        .col-12
          %table.table.table-striped.table-bordered
            %thead
              %tr
                %th 日付
                %th 説明
                %th 金額
                %th
                %th
                %th
            %tbody
              - @save.each do |save|
                %tr
                  %td= save.created_at.strftime('%Y/%m/%d %H:%M')
                  %td= save.name
                  %td= save.content
                  %td= save.money.to_i
                  %td
                    %button.btn.btn-warning
                      = link_to "編集", edit_save_path(save), class: 'menu-link'
                  %td
                    = link_to "/save/#{save.id}/destroy", {method: "save"} do
                      %button.btn.btn-danger 削除
      - else
        %a 登録されている貯金はありません。

-# ----------------------------
-# footer
-# ----------------------------
= render 'layouts/footer'
  
:javascript
  document.addEventListener("turbolinks:load", function(){
    var ctx = document.getElementById("myChart").getContext('2d');
  
    var original = Chart.defaults.global.legend.onClick;
    Chart.defaults.global.legend.onClick = function(e, legendItem) {
      update_caption(legendItem);
      original.call(this, e, legendItem);
    };
    
    var myChart = new Chart(ctx, {
      type: 'bar',
      data: {
        labels: (gon.month),
        datasets: [{
          label: '月毎の収入(1単位/1万円)',
          backgroundColor: "rgb(255,228,181)",
          data: [(gon.money_month_1), (gon.money_month_2), (gon.money_month_3), (gon.money_month_4), (gon.money_month_5), (gon.money_month_6), (gon.money_month_7), (gon.money_month_8), (gon.money_month_9), (gon.money_month_10), (gon.money_month_11), (gon.money_month_12)],
        }]
      },
      options: {
        title: {
          display: true,
          padding:3,
          fontSize: 26
        },
        scales: {
          xAxes: [{
            stacked: true,
            categoryPercentage:0.8
          }],
          yAxes: [{
            stacked: true,
            ticks: {
              stepSize: 2
            }
          }]
        },
        legend: {
          labels: {
            boxWidth: 12,
            padding: 20
          },
          display: true
        },
        tooltips:{
          mode:'label'
        }
      }
    });
  });