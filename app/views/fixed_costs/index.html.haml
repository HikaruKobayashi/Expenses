-# ----------------------------
-# header
-# ----------------------------
= render 'layouts/header'

.container-fluid
  .row
    -# ----------------------------
    -# sidebar
    -# ----------------------------
    = render 'layouts/side_bar'

    %div.col-8{ style: 'margin-left: 100px;'}
      %h2 【固定費】
      %button.btn.btn-warning
        = link_to '登録', new_fixed_cost_path	
      - if @fixedCost.present?
        .col-10
          %h2 現在の総変動費は#{FixedCost.sum(:money)}円です。
        %h2 月間レポート
        %canvas#myChart.col-12
        .col-12
          %table.table.table-striped.table-bordered
            %thead
              %tr
                %th 日付
                %th 商品名
                %th 説明
                %th 金額
                %th
                %th
            %tbody
              - @fixedCost.each do |fixedCost|
                %tr
                  %th= fixedCost.created_at.strftime('%Y/%m/%d %H:%M')
                  %th= fixedCost.name
                  %th= fixedCost.content
                  %th= fixedCost.money.to_i
                  %td
                    = link_to "編集", edit_fixed_cost_path(fixedCost)
                  %td
                    = link_to "削除", fixedCost, method: :delete, data: { confirm: 'この操作を取り戻すことができません。本当に削除しますか？' }
      - else
        %a 登録されている収入はありません。

-# ----------------------------
-# footer
-# ----------------------------
= render 'layouts/footer'

:javascript
  document.addEventListener("turbolinks:load", function(){
    var ctx = document.getElementById("myChart").getContext('2d');
  
    var original = Chart.defaults.global.legend.onClick;
    Chart.defaults.global.legend.onClick = function(e, legendItem) {
      update_caption(legendItem);
      original.call(this, e, legendItem);
    };
    
    var myChart = new Chart(ctx, {
      type: 'bar',
      data: {
        labels: (gon.month),
        datasets: [{
          label: '月毎の固定費(1単位/1万円)',
          backgroundColor: "rgb(255,228,181)",
          data: [(gon.money_month_1), (gon.money_month_2), (gon.money_month_3), (gon.money_month_4), (gon.money_month_5), (gon.money_month_6), (gon.money_month_7), (gon.money_month_8), (gon.money_month_9), (gon.money_month_10), (gon.money_month_11), (gon.money_month_12)],
        }]
      },
      options: {
        title: {
          display: true,
          padding:3,
          fontSize: 26
        },
        scales: {
          xAxes: [{
            stacked: true,
            categoryPercentage:0.8
          }],
          yAxes: [{
            stacked: true,
            ticks: {
              stepSize: 2
            }
          }]
        },
        legend: {
          labels: {
            boxWidth: 12,
            padding: 20
          },
          display: true
        },
        tooltips:{
          mode:'label'
        }
      }
    });
  });